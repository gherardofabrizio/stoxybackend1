{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "_app/*": ["src/*"],
      "_dependencies/*": ["dependencies/*"]
    }
  }
}